<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_app"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="120dp"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/textview_title_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titulo de la aplicación"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/textview_description_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Descripción de la aplicación"
                    android:textColor="#000000"
                    android:layout_marginStart="20dp"
                    android:paddingEnd="40dp"
                    />

                <TextView
                    android:id="@+id/ver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:text="Ver en Google Play"
                    android:textColor="#0C6010"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#E1DDDD" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>