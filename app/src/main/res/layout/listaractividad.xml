<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/colorPrimaryDark"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/textview_m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:text=""
                    android:visibility="gone"
                    android:textColor="#0C6010"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:id="@+id/textview_enunciado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titulo del Tema"
                    android:textColor="#ffffff"
                    android:textStyle="bold"

                    android:layout_marginStart="20dp"/>


                <ImageView
                    android:id="@+id/img_actividad"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/borde_temas"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv3p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:text="Click para ver opciones."
                    android:textColor="#ffffff"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>