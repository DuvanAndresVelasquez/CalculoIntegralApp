<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetContainer_video"
    android:orientation="vertical"
    android:background="@drawable/drawable_sheet_background_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_opensheet"
        android:layout_marginBottom="30dp"/>


    <TextView
        android:id="@+id/nombre_bottomSheet_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:text="Tema"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <com.pierfrancescosoffritti.androidyoutubeplayer.player.YouTubePlayerView
        android:id="@+id/youtube_player_view_bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

</LinearLayout>